package com.awsp8.wizardry.Arcane.Blocks;

import com.awsp8.wizardry.Info;

import cpw.mods.fml.relauncher.Side;
import cpw.mods.fml.relauncher.SideOnly;
import net.minecraft.block.Block;
import net.minecraft.block.material.Material;
import net.minecraft.client.renderer.texture.IIconRegister;
import net.minecraft.util.IIcon;

public class CastIronBlock
				extends Block{

	protected CastIronBlock(Material material) {
		super(material);
	}

	@SideOnly(Side.CLIENT)
	public static IIcon SingleIcon;
	
	@SideOnly(Side.CLIENT)
	public static IIcon CenterIcon;
	
	@Override
	@SideOnly(Side.CLIENT)
	public void registerBlockIcons(IIconRegister icon){
		SingleIcon = icon.registerIcon(Info.NAME.toLowerCase() + ":castIron");
		CenterIcon = icon.registerIcon(Info.NAME.toLowerCase() + ":castIronCenter");
	}
	
	@Override
	@SideOnly(Side.CLIENT)
	public IIcon getIcon(int side, int metadata){
		return SingleIcon;
	}
}
